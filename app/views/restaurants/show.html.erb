<div class="d-flex justify-content-between align-items-center">
  <h1><%= @restaurant.name %> </h1>
  <%= link_to "◀︎ Back to restaurant list", restaurants_path, class: "btn btn-secondary" %>
</div>
<div class="card mb-3">
  <!-- <img src="..." class="card-img-top" alt="..."> -->
  <div class="card-body">
    <span class="badge badge-secondary badge-pill"><%= @restaurant.reviews.average(:rating)? '★' * @restaurant.reviews.average(:rating) : '-'%></span>
    <h5 class="card-title"> <%= @restaurant.category %> restaurant </h5>
    <p class="card-text"> ✉️ - <%= @restaurant.address %> </p>
    <p class="card-text"> ☎️ - <%= @restaurant.phone_number %> </p>
  </div>
</div>
<%= link_to "Edit", edit_restaurant_path(@restaurant), class: "btn btn-warning" %>
<%= link_to "Delete", restaurant_path(@restaurant), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
<%= link_to "Add review", new_restaurant_review_path(@restaurant), class: "btn btn-light" %>
<br>
<br>
<h3>Reviews (<%= @restaurant.reviews.count %>)</h3>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= review.content %>
      <span class="badge badge-success badge-pill"> <%= "★" * review.rating  %></span>
    </li>
  <% end %>
</ul>
